extends layout

block content
    h1= article.title
    h5 Written by #{article.author}
    p= article.body
    hr
    a.btn.btn-secondary(href="/articles/edit/"+ article._id) Edit
    | &nbsp; &nbsp; &nbsp;
    a.btn.btn-info(href="/") Go to Back
    | &nbsp; &nbsp; &nbsp;
    a.btn.btn-danger.delete-article(href="#", data-id=article._id) Delete